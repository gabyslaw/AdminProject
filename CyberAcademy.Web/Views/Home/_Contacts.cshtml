<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="m-t-0">Contacts</h4>
            <div class="table-responsive">
                <table class="table table-hover mails m-0 table table-actions-bar">
                    <thead>
                        <tr>
                            <th style="min-width: 95px;">
                                <div class="checkbox checkbox-primary checkbox-single m-r-15">
                                    <input id="action-checkbox" type="checkbox">
                                    <label for="action-checkbox"></label>
                                </div>
                                <!--<div class="btn-group dropdown">-->
                                <!--<button type="button" class="btn btn-default btn-xs dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"><i class="caret"></i></button>-->
                                <!--<ul class="dropdown-menu" role="menu">-->
                                <!--<li><a href="#">Action</a></li>-->
                                <!--<li><a href="#">Another action</a></li>-->
                                <!--<li><a href="#">Something else here</a></li>-->
                                <!--<li class="divider"></li>-->
                                <!--<li><a href="#">Separated link</a></li>-->
                                <!--</ul>-->
                                <!--</div>-->
                            </th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Products</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.Contacts)
                        {

                           var className = item.IsActive ? "success" : "danger";

                            <tr class="@className">
                                <td>
                                    <div class="checkbox checkbox-primary m-r-15">
                                        <input id="checkbox2" type="checkbox">
                                        <label for="checkbox2"></label>
                                    </div>
                                    @{
                                        var url = Url.Content($"~/{item.ProfileImage}");
                                    }
                                    <img src="@Url.Content($"~/{item.ProfileImage}")" alt="contact-img" title="contact-img" class="img-circle thumb-sm" />
                                </td>

                                <td>
                                    @{
                                        if (string.IsNullOrEmpty(item.Name))
                                        {
                                            item.Name = "[NA]";
                                        }
                                    }
                                    @item.Name
                                </td>

                                <td>
                                    <a href="#" class="text-muted">@item.Email</a>
                                </td>

                                <td>
                                    <b><a href="" class="text-dark"><b>@item.Product</b></a> </b>
                                </td>

                                <td>
                                    @item.CreatedOn
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
